{
  "version": 2,
  "framework": "express",
  "functions": {
    "server.js": {
      "includeFiles": "node_modules/**",
      "excludeFiles": "node_modules/{@types,jest,ts-jest,typescript,eslint,prettier}/**"
    }
  },
  "rewrites": [
    {
      "source": "/(.+\\.html|css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot|json|xml)$",
      "destination": "/$1"
    },
    {
      "source": "/api/:path*",
      "destination": "/server.js"
    },
    {
      "source": "/sitemap.xml",
      "destination": "/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/server.js"
    }
  ]
}